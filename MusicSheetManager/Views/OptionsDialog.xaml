<Window x:Class="MusicSheetManager.Views.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/Resources/options.png"
        Title="Options" Height="260" Width="640" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Content area -->
        <Grid Grid.Row="0" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- App data folder -->
            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock Text="App data folder:" FontWeight="Bold" Margin="0,0,0,6" />
                <TextBox x:Name="AppDataFolderTextBox"
                         Text="{Binding AppDataFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         IsReadOnly="True"
                         IsReadOnlyCaretVisible="False"
                         VerticalScrollBarVisibility="Disabled"
                         BorderThickness="1"
                         Padding="4"
                         MinWidth="420" />
            </StackPanel>
            <Button Grid.Row="0" Grid.Column="1"
                    Margin="12,0,0,0"
                    Padding="10,0,10,0"
                    VerticalAlignment="Bottom"
                    Height="{Binding ElementName=AppDataFolderTextBox, Path=ActualHeight}"
                    Content="Browse..."
                    Command="{Binding BrowseAppDataFolderCommand}"/>

            <!-- Distribution folder -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,0,0">
                <TextBlock Text="Distribution folder:" FontWeight="Bold" Margin="0,0,0,6" />
                <TextBox x:Name="DistributionFolderTextBox"
                         Text="{Binding DistributionFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         IsReadOnly="True"
                         IsReadOnlyCaretVisible="False"
                         VerticalScrollBarVisibility="Disabled"
                         BorderThickness="1"
                         Padding="4"
                         MinWidth="420" />
            </StackPanel>
            <Button Grid.Row="1" Grid.Column="1"
                    Margin="12,0,0,0"
                    Padding="10,0,10,0"
                    VerticalAlignment="Bottom"
                    Height="{Binding ElementName=DistributionFolderTextBox, Path=ActualHeight}"
                    Content="Browse..."
                    Command="{Binding BrowseDistributionFolderCommand}"/>
        </Grid>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="12">
                <Button Width="100" Margin="0,0,8,0" IsDefault="True" Content="Save" Command="{Binding SaveCommand}"/>
                <Button Width="100" IsCancel="True" Content="Cancel"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>