<Window x:Class="MusicSheetManager.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Border Padding="16" Background="#FFF" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App icon -->
            <Image x:Name="AppIconImage" Width="64" Height="64" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" />

            <!-- App name -->
            <TextBlock x:Name="AppNameText" Grid.Row="0" Grid.Column="2" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>

            <!-- Version -->
            <TextBlock x:Name="VersionText" Grid.Row="1" Grid.Column="2" Margin="0,6,0,0" TextWrapping="Wrap"/>

            <!-- Build date -->
            <TextBlock x:Name="BuildDateText" Grid.Row="2" Grid.Column="2" Margin="0,2,0,0" TextWrapping="Wrap"/>

            <Separator Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="0" Margin="0,12,0,12"/>

            <!-- Author -->
            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="Author: Niklaus Burren" />
            <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Text="Contact: niklaus.burren@outlook.com" />

            <!-- GitHub link -->
            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,8,0,0">
                <Hyperlink NavigateUri="https://github.com/niklausburren/MusicSheetManager"
                           RequestNavigate="GitHubLink_OnRequestNavigate">
                    https://github.com/niklausburren/MusicSheetManager
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</Window>