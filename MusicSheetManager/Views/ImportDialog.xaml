<Window x:Class="MusicSheetManager.Views.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:MusicSheetManager.Models"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:converters="clr-namespace:MusicSheetManager.Converters"
        xmlns:viewmodels="clr-namespace:MusicSheetManager.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance Type=viewmodels:ImportDialogViewModel}"
        Title="Import Music Sheets"
        Height="800"
        Width="1024"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:RowNumberConverter x:Key="RowNumberConverter" />
        <converters:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter" />
        <ObjectDataProvider x:Key="PagesPerSheetValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewmodels:PagesPerSheet"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Expander Header="Metadata" VerticalAlignment="Top" IsExpanded="True" Grid.Row="0">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" />
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <StackPanel>
                    <Label Content="Title" Margin="-5, 0, 0, 0" />
                    <TextBox Name="TitleTextBox" Text="{Binding Metadata.Title}" IsReadOnly="{Binding IsMetadataReadOnly}"/>
                    <Label Content="Composer" Margin="-5, 0, 0, 0" />
                    <TextBox Name="ComposerTextBox" Text="{Binding Metadata.Composer}" IsReadOnly="{Binding IsMetadataReadOnly}"/>
                    <Label Content="Arranger" Margin="-5, 0, 0, 0" />
                    <TextBox Name="ArrangerTextBox" Text="{Binding Metadata.Arranger}" IsReadOnly="{Binding IsMetadataReadOnly}"/>
                </StackPanel>
            </Expander>

            <Expander Header="Split options" Margin="0, 20, 0, 0" VerticalAlignment="Top" IsExpanded="True" Grid.Row="1">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" />
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <StackPanel>
                    <Label Content="Pages per Sheet" Margin="-5, 0, 0, 0" />
                    <ComboBox Name="PagesPerSheetComboBox"
                          ItemsSource="{Binding Source={StaticResource PagesPerSheetValues}}"
                          SelectedValue="{Binding SplitOptions.PagesPerSheet}"
                          SelectedValuePath="."
                          Height="22">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                    <CheckBox Content="Split A3 to A4" Name="SplitA3ToA4CheckBox" IsChecked="{Binding SplitOptions.SplitA3ToA4}" Margin="0,10,0,0" />
                    <CheckBox Content="Rotate" Name="RotateCheckBox" IsChecked="{Binding SplitOptions.Rotate}" Margin="0,10,0,0" />
                </StackPanel>
            </Expander>

            <Expander Header="Music Sheets" Margin="0, 20, 0, 10" VerticalAlignment="Stretch" IsExpanded="True" Grid.Row="3">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" />
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView Name="MusicSheetListView"
                              Margin="0,10,0,0"
                              ItemsSource="{Binding MusicSheets}"
                              VerticalAlignment="Stretch"
                              Grid.Row="0"
                              SelectionChanged="MusicSheetListView_SelectionChanged"
                              AlternationCount="1">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Instrument}" Value="{x:Static models:InstrumentInfo.Unknown}">
                                        <Setter Property="Background" Value="Yellow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Sheet.HasConflict}" Value="True">
                                        <Setter Property="Background" Value="#FFFFC0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource RowNumberConverter}}"
                                                       TextAlignment="Center" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="" Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type models:MusicSheetInfo}">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="152">
                                    <GridViewColumnHeader Content="Instrument" HorizontalContentAlignment="Left" Padding="6,0,0,0" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type models:MusicSheetInfo}">
                                            <ComboBox
                                                ItemsSource="{x:Static models:InstrumentInfo.All}" 
                                                SelectedItem="{Binding Instrument, Mode=TwoWay}" 
                                                DisplayMemberPath="DisplayName" 
                                                HorizontalAlignment="Stretch" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="80">
                                    <GridViewColumnHeader Content="Part" HorizontalContentAlignment="Left" Padding="6,0,0,0" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type models:MusicSheetInfo}">
                                            <xctk:CheckComboBox 
                                                ItemsSource="{x:Static models:PartInfo.AllWithoutNone}"     
                                                SelectedItemsOverride="{Binding Parts, Mode=TwoWay}" 
                                                DisplayMemberPath="DisplayName"
                                                Delimiter=", "
                                                HorizontalAlignment="Stretch"
                                                Height="22">
                                                <xctk:CheckComboBox.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#efefef" Offset="0.0" />
                                                        <GradientStop Color="#e5e5e5" Offset="1.0" />
                                                    </LinearGradientBrush>
                                                </xctk:CheckComboBox.Background>
                                            </xctk:CheckComboBox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="60">
                                    <GridViewColumnHeader Content="Clef" HorizontalContentAlignment="Left" Padding="6,0,0,0" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type models:MusicSheetInfo}">
                                            <ComboBox
                                                ItemsSource="{x:Static models:ClefInfo.All}" 
                                                SelectedItem="{Binding Clef, Mode=TwoWay}" 
                                                DisplayMemberPath="DisplayName" 
                                                HorizontalAlignment="Stretch" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="Split" Name="SplitButton" Padding="5, 0, 5, 0" Command="{Binding SplitCommand}" Height="20" />
                        <ProgressBar Grid.Column="2" Height="20" Value="{Binding Progress}" Maximum="100" Visibility="{Binding IsSplitting, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </Grid>
            </Expander>
        </Grid>
        
        <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <wpf:WebView2 x:Name="PdfViewer" Grid.Row="0" Grid.Column="2" />

        <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Import" Width="100" Margin="5" Command="{Binding ImportCommand}" />
                <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
