<Window x:Class="MusicSheetManager.Views.AssignmentsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MusicSheetManager.ViewModels"
        xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:AssignmentsDialogViewModel}"
        Title="Assign music sheets to people"
        Height="980"
        Width="605"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <CollectionViewSource x:Key="GroupedPeople" Source="{Binding People}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Person.Instrument" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <componentModel:SortDescription PropertyName="Person.Instrument.Index" />
                <componentModel:SortDescription PropertyName="Person.Part.Index" />
                <componentModel:SortDescription PropertyName="Person.FullName" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <Style x:Key="HeaderlessGridViewColumnHeader" TargetType="GridViewColumnHeader">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image 
                Grid.Column="0"
                Width="60"
                Height="60"
                Stretch="Uniform"
                Margin="0,0,13,0"
                VerticalAlignment="Center"
                Source="/Resources/folder.png" />

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Label Content="{Binding MusicSheetFolder.Title}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0"/>
                <Label Content="{Binding MusicSheetFolder.Credits}" FontSize="12" FontWeight="Regular" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Padding="0"/>
            </StackPanel>
        </Grid>

        <ListView x:Name="PeopleListView" ItemsSource="{Binding Source={StaticResource GroupedPeople}}" Grid.Row="1" Margin="10">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Expand all groups" Click="ExpandAllGroups_Click" />
                    <MenuItem Header="Collapse all groups" Click="CollapseAllGroups_Click" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="0,0,0,0.5" Padding="6">
                                            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                                            <Expander x:Name="GroupExpander"
                                                      IsExpanded="True"
                                                      Tag="{Binding Name.Key}">
                                                <Expander.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Width="32"
                                                                Height="32"
                                                                VerticalAlignment="Center"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1"
                                                                CornerRadius="3"
                                                                Margin="2,0,6,0"
                                                                Background="Transparent"
                                                                SnapsToDevicePixels="True">
                                                            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                                                            <Image Width="26" Height="26"
                                                                   Stretch="Uniform"
                                                                   Margin="2"
                                                                   Source="{Binding Name.Icon}"/>
                                                        </Border>
                                                        <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                                                        <TextBlock Text="{Binding Name.DisplayName}"
                                                                   FontSize="14"
                                                                   FontWeight="Bold"
                                                                   Margin="0,-3,0,0"
                                                                   VerticalAlignment="Center" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter Margin="0,5,0,5" />
                                            </Expander>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="ItemBorder"
                                        Background="Transparent"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                    <GridViewRowPresenter Content="{TemplateBinding Content}" Columns="{TemplateBinding GridView.ColumnCollection}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMusicSheet}" Value="{x:Null}">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="Yellow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsCustomAssignment}" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#e6f7ff"/>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource HeaderlessGridViewColumnHeader}">
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type viewModels:PersonInfo}">
                                <TextBlock Margin="53,0,0,0">
                                    <Run Text="{Binding Person.FullName, Mode=OneWay}" />
                                    <Run>
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Setter Property="Text" Value="{Binding Person.Part.DisplayName, Mode=OneWay, StringFormat=' ({0})'}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Person.Part.Key}" Value="None">
                                                        <Setter Property="Text" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                    </Run>
                                    <Run>
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Setter Property="Text" Value="" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Person.Dispensed}" Value="True">
                                                        <Setter Property="Text" Value="*" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                    </Run>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type viewModels:PersonInfo}">
                                <ComboBox ItemsSource="{Binding AssignableMusicSheets}" SelectedItem="{Binding SelectedMusicSheet}" Width="250" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Border Grid.Row="2" Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Restore defaults" Width="120" Margin="5" HorizontalAlignment="Left" Command="{Binding RestoreDefaultsCommand}" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="OK" Width="100" Margin="5" Command="{Binding UpdateAssignmentsCommand}" />
                    <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
