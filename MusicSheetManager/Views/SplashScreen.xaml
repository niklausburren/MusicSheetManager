<Window x:Class="MusicSheetManager.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Width="700"
        Height="466"
        Background="Transparent"
        AllowsTransparency="True">
  <Grid Margin="0">
    <Image 
            Grid.Row="0"
            Source="/Resources/splash.png"
            RenderOptions.BitmapScalingMode="HighQuality" />

    <ProgressBar
             Margin="133,377,159,83"
             Minimum="0"
             Maximum="100"
             Value="{Binding Progress, RelativeSource={RelativeSource AncestorType=Window}}"
             Background="#33000000"
             Foreground="#fe4563"
             BorderBrush="#66000000"
             BorderThickness="1" RenderTransformOrigin="0.5,0.5" >
      <ProgressBar.RenderTransform>
        <TransformGroup>
          <ScaleTransform ScaleY="-1"/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform/>
        </TransformGroup>
      </ProgressBar.RenderTransform>
    </ProgressBar>
  </Grid>
</Window>